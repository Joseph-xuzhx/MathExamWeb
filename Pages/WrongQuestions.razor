@code {
    [Parameter] public string Subject { get; set; } = "";

    private List<WrongQuestion> DisplayedQuestions = new List<WrongQuestion>();
    private bool IsLoading = true;
    private bool ShowMastered = false;

    private string SubjectName => Subject == "chinese" ? "è¯­æ–‡" : "æ•°å­¦";
    private string SubjectRoute => Subject == "chinese" ? "chinese" : "math";

    private int UnmasteredCount => AllWrongQuestions.Count(w => !w.IsMastered);
    private int MasteredCount => AllWrongQuestions.Count(w => w.IsMastered);

    private List<WrongQuestion> AllWrongQuestions = new List<WrongQuestion>();

    protected override async Task OnInitializedAsync()
    {
        await LoadWrongQuestions();
    }

    protected override void OnParametersSet()
    {
        UpdateDisplayList();
    }

    private async Task LoadWrongQuestions()
    {
        IsLoading = true;
        try
        {
            AllWrongQuestions = await WrongService.GetAllWrongQuestions(Subject);
            UpdateDisplayList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"åŠ è½½é”™é¢˜å¤±è´¥: {ex.Message}");
        }
        finally
        {
            IsLoading = false;
        }
    }

    private void UpdateDisplayList()
    {
        DisplayedQuestions = ShowMastered
            ? AllWrongQuestions.Where(w => w.IsMastered).ToList()
            : AllWrongQuestions.Where(w => !w.IsMastered).ToList();
    }

    private async Task MarkAsMastered(string wrongQuestionId)
    {
        await WrongService.MarkAsMastered(wrongQuestionId);
        await LoadWrongQuestions();
    }

    private async Task DeleteWrongQuestion(string wrongQuestionId)
    {
        await WrongService.DeleteWrongQuestion(wrongQuestionId);
        await LoadWrongQuestions();
    }
